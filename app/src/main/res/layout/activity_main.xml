<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.ba.railroad.simpleclient.MainActivity">

    <TextView
        android:id="@+id/switchErrors"
        android:layout_width="0dp"
        android:layout_height="78dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sw1" />

    <Button
        android:id="@+id/sw3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Switch 3"
        app:layout_constraintLeft_toRightOf="@+id/sw2"
        app:layout_constraintTop_toBottomOf="@+id/switchSpinner" />

    <Button
        android:id="@+id/sw4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Switch 4"
        app:layout_constraintLeft_toRightOf="@+id/sw3"
        app:layout_constraintTop_toBottomOf="@+id/switchSpinner" />

    <EditText
        android:id="@+id/speed"
        android:layout_width="123dp"
        android:layout_height="46dp"
        android:ems="10"
        android:inputType="number"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/locomotiveSpinner"
        android:layout_marginStart="8dp" />

    <Button
        android:id="@+id/send"
        android:layout_width="99dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="SEND"
        app:layout_constraintLeft_toRightOf="@+id/speed"
        app:layout_constraintTop_toBottomOf="@+id/locomotiveSpinner"
        android:layout_marginStart="8dp" />

    <Button
        android:id="@+id/backward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Backward"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/speed"
        app:layout_constraintLeft_toRightOf="@+id/forward"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp" />

    <Button
        android:id="@+id/horn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Horn"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/speed"
        app:layout_constraintLeft_toRightOf="@+id/backward"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp" />

    <Button
        android:id="@+id/forward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forward"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/speed"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp" />

    <Spinner
        android:id="@+id/locomotiveSpinner"
        android:layout_width="368dp"
        android:layout_height="37dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <Spinner
        android:id="@+id/switchSpinner"
        android:layout_width="368dp"
        android:layout_height="37dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/locomotiveErrors"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/locomotiveErrors"
        android:layout_width="0dp"
        android:layout_height="78dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/forward"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="Stop"
        app:layout_constraintLeft_toRightOf="@+id/send"
        app:layout_constraintTop_toBottomOf="@+id/locomotiveSpinner"
        android:layout_marginStart="8dp" />

    <Button
        android:id="@+id/sw1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Switch 1"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/switchSpinner"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp" />

    <Button
        android:id="@+id/sw2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Switch 2"
        app:layout_constraintLeft_toRightOf="@+id/sw1"
        app:layout_constraintTop_toBottomOf="@+id/switchSpinner" />

    <Spinner
        android:id="@+id/craneSpinner"
        android:layout_width="368dp"
        android:layout_height="37dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switchErrors"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/craneleft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Links"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/craneSpinner"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp" />

    <Button
        android:id="@+id/craneright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Rechts"
        app:layout_constraintLeft_toRightOf="@+id/sw1"
        app:layout_constraintTop_toBottomOf="@+id/craneSpinner" />

    <Button
        android:id="@+id/craneup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Hoch"
        app:layout_constraintLeft_toRightOf="@+id/sw2"
        app:layout_constraintTop_toBottomOf="@+id/craneSpinner" />

    <Button
        android:id="@+id/cranedown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Runter"
        app:layout_constraintLeft_toRightOf="@+id/sw3"
        app:layout_constraintTop_toBottomOf="@+id/craneSpinner" />

    <TextView
        android:id="@+id/craneErrors"
        android:layout_width="0dp"
        android:layout_height="68dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/craneleft" />

</androidx.constraintlayout.widget.ConstraintLayout>
